<%= form_for(@setting, :url => user_setting_path(current_user.id, current_user.setting.id)) do |f| %>
  <% if current_user.setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(current_user.setting.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% current_user.setting.errors.full_messages.each do |message| %>
